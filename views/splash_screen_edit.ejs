<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <%- include('_layouts/head') %>
    <title>Edit Onboarding Screen | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Edit Onboarding Screen</span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/onboarding">Onboarding Screens</a></li>
                                <li class="breadcrumb-item active">Edit</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container pl-2 pr-2">
            <div class="card">
                <div class="row">
                    <div class="col s12">
                        <div id="basic-form" class="card-default scrollspy">
                            <div class="card-content">
                                <form method="POST" 
                                      action="/admin/onboarding/<%= screen._id %>" 
                                      enctype="multipart/form-data" 
                                      class="formValidate0" 
                                      id="formValidate0">

                                    <!-- Fake PUT method if using method-override -->
                                    <input type="hidden" name="_method" value="PUT">

                                    <div class="section" style="margin: 0px 10px -20px 10px;">
                                        <div class="row section">
                                            <div class="input-field col s12">
                                                <p>Upload New Media (leave empty to keep current)</p>
                                                <input type="file" id="input-file-events" name="media" 
                                                       accept="image/jpeg,image/png,image/gif,video/mp4,video/quicktime" 
                                                       class="dropify-event" />
                                                <span class="error-message" id="mediaError"></span>
                                                <% if (screen.mediaUrl) { %>
                                                    <div class="mt-2">
                                                        <small>Current <%= screen.mediaType %>:</small><br>
                                                        <% if (screen.mediaType === 'video') { %>
                                                            <video controls style="max-height: 220px; width: 100%;">
                                                                <source src="<%= process.env.IMAGE_URL %><%= screen.mediaUrl %>" type="video/mp4">
                                                            </video>
                                                        <% } else { %>
                                                            <img src="<%= process.env.IMAGE_URL %><%= screen.mediaUrl %>" style="max-height: 220px; width: 100%;" />
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="input-field col s12">
                                        <select name="type" id="type" required <%= screen.type === 'splash' ? 'disabled' : '' %>>
                                            <option value="tutorial" <%= screen.type === 'tutorial' ? 'selected' : '' %>>Tutorial</option>
                                            <option value="splash" <%= screen.type === 'splash' ? 'selected' : '' %>>Splash</option>
                                        </select>
                                        <label>Type</label>
                                        <% if (screen.type === 'splash') { %>
                                            <span class="helper-text red-text">Splash screen is single - editing will replace existing one</span>
                                        <% } %>
                                    </div>

                                    <div class="input-field col s12">
                                        <input id="title" name="title" type="text" value="<%= screen.title || '' %>">
                                        <label for="title">Title (optional)</label>
                                    </div>

                                    <div class="input-field col s12">
                                        <textarea id="description" name="description" class="materialize-textarea"><%= screen.description || '' %></textarea>
                                        <label for="description">Description (optional)</label>
                                    </div>

                                    <div class="input-field col s12">
                                        <input id="buttonText" name="buttonText" type="text" value="<%= screen.buttonText || 'Next' %>">
                                        <label for="buttonText">Button Text</label>
                                    </div>

                                    <div class="input-field col s12">
                                        <input id="buttonColor" name="buttonColor" type="text" value="<%= screen.buttonColor || '#8c8c8cff' %>">
                                        <label for="buttonColor">Button Color (hex with alpha)</label>
                                    </div>

                                    <div class="input-field col s12">
                                        <input id="order" name="order" type="number" value="<%= screen.order || 0 %>">
                                        <label for="order">Sort Order (for tutorial screens)</label>
                                        <span class="error-message" id="orderError"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col s12 display-flex justify-content-end">
                                            <button class="btn btn-edit" type="submit">Update Screen</button>
                                            &nbsp;&nbsp;&nbsp;
                                            <a type="button" class="btn btn-delete" href="/admin/onboarding">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('_layouts/commonJs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.dropify').dropify();

            function validateOrder() {
                const value = $('#order').val().trim();
                if (!value) {
                    $('#order').addClass('error-field');
                    $('#orderError').text('Please enter sort order');
                    return false;
                } else {
                    $('#order').removeClass('error-field');
                    $('#orderError').text('');
                    return true;
                }
            }

            $('#order').on('input', validateOrder);

            $('#formValidate0').on('submit', function(e) {
                let valid = validateOrder();
                if (!valid) {
                    e.preventDefault();
                    $('html, body').animate({ scrollTop: $('#orderError').offset().top }, 500);
                }
            });
        });
    </script>
</body>
</html>