<header class="header">
  <div class="header-left">
    <button class="mobile-menu-btn" onclick="toggleSidebar()">
      <i class="fas fa-bars"></i>
    </button>
    
    <div class="header-search">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Search orders, deliveries, drivers..." id="globalSearch">
    </div>
  </div>
  
  <div class="header-right">
    <button class="header-icon-btn" onclick="toggleNotifications()">
      <i class="fas fa-bell"></i>
      <span class="badge"></span>
    </button>
    
    <button class="header-icon-btn" onclick="toggleMessages()">
      <i class="fas fa-envelope"></i>
    </button>
    
    <div class="header-profile" onclick="toggleProfileMenu()">
      <div class="header-avatar">
        <%= user.name.charAt(0).toUpperCase() %>
      </div>
      <div class="header-profile-info">
        <div class="header-profile-name"><%= user.name %></div>
        <div class="header-profile-role">Administrator</div>
      </div>
      <i class="fas fa-chevron-down"></i>
    </div>
  </div>
</header>