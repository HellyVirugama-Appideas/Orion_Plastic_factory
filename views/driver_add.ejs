<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">

<head>
    <%- include('_layouts/head') %>
    <title>Create New Driver | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" 
      data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <div id="breadcrumbs-wrapper" style="background-color: white;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 l6">
                            <h5 class="breadcrumbs-title"><span>Create New Driver</span></h5>
                        </div>
                        <div class="col s12 m6 l6 right-align-md">
                            <a href="/admin/drivers" class="btn gradient-45deg-purple-deep-orange pull-right btn-breadcrumbs">
                                Back to Drivers
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('messages', { messages: messages }) %>

            <div class="col s12">
                <div class="container">
                    <div class="section users-view">
                        <div class="card-panel">
                            <div class="card-content">
                                <form id="createDriverForm" method="POST" action="/admin/drivers/create" enctype="multipart/form-data">
                                    <div class="row">
                                        <!-- Personal Information -->
                                        <div class="col s12">
                                            <h5>Personal Information</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="fullName" name="fullName" type="text" required>
                                            <label for="fullName">Full Name <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m3">
                                            <select id="contactCountryCode" name="contactCountryCode" required>
                                                <option value="+91" selected>+91 (India)</option>
                                                <option value="+971">+971 (UAE)</option>
                                                <option value="+1">+1 (USA)</option>
                                                <!-- Add more country codes as needed -->
                                            </select>
                                            <label for="contactCountryCode">Country Code <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m3">
                                            <input id="contactNumber" name="contactNumber" type="text" required>
                                            <label for="contactNumber">Contact Number <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="emiratesId" name="emiratesId" type="text">
                                            <label for="emiratesId">Emirates ID / Aadhaar Number</label>
                                        </div>

                                        <!-- Vehicle Information -->
                                        <div class="col s12">
                                            <h5>Vehicle Information</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="vehicleNumber" name="vehicleNumber" type="text">
                                            <label for="vehicleNumber">Vehicle Number</label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="registrationNumber" name="registrationNumber" type="text">
                                            <label for="registrationNumber">Registration Number</label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <select id="region" name="region">
                                                <option value="">Select Region</option>
                                                <option value="India">India</option>
                                                <option value="UAE">UAE</option>
                                                <option value="USA">USA</option>
                                                <!-- Add more regions -->
                                            </select>
                                            <label for="region">Region</label>
                                        </div>

                                        <!-- Documents -->
                                        <div class="col s12">
                                            <h5>Documents</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="licenseNumber" name="licenseNumber" type="text" required>
                                            <label for="licenseNumber">License Number <span class="red-text">*</span></label>
                                        </div>

                                        <div class="col s12 m6">
                                            <label>License Front</label>
                                            <input type="file" name="licenseFront" class="dropify" accept="image/*">
                                        </div>

                                        <div class="col s12 m6">
                                            <label>License Back</label>
                                            <input type="file" name="licenseBack" class="dropify" accept="image/*">
                                        </div>

                                        <div class="col s12 m6">
                                            <label>RC Front</label>
                                            <input type="file" name="rcFront" class="dropify" accept="image/*">
                                        </div>

                                        <div class="col s12 m6">
                                            <label>RC Back</label>
                                            <input type="file" name="rcBack" class="dropify" accept="image/*">
                                        </div>

                                        <!-- Additional Info -->
                                        <div class="col s12">
                                            <h5>Additional Information</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="pin" name="pin" type="text">
                                            <label for="pin">PIN / Password</label>
                                        </div>

                                        <!-- Submit -->
                                        <div class="col s12 right-align mt-4">
                                            <button type="submit" class="btn gradient-45deg-purple-deep-orange waves-effect waves-light">
                                                Create Driver
                                            </button>
                                            <a href="/admin/drivers" class="btn grey waves-effect waves-light ml-2">
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('_layouts/commonJs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.dropify').dropify({
                messages: {
                    'default': 'Drag and drop or click to upload',
                    'remove': 'Remove',
                    'error': 'Ooops, something wrong happened.'
                }
            });
        });
    </script>
</body>
</html>