<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">
        <h2>Admin Panel</h2>
      </div>
      <nav class="nav-menu">
        <ul>
          <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
          <li><a href="/admin/users">Users</a></li>
          <li><a href="/admin/drivers">Drivers</a></li>
          <li><a href="/admin/documents">Documents</a></li>
          <li><a href="/admin/profile">Profile</a></li>
          <li><a href="/admin/logout">Logout</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <header class="header">
        <h1>Dashboard</h1>
        <div class="user-info">
          <span>Welcome, <%= admin.name %></span>
        </div>
      </header>

      <!-- Statistics Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">ğŸ‘¥</div>
          <div class="stat-details">
            <h3><%= stats.users.total %></h3>
            <p>Total Users</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸš—</div>
          <div class="stat-details">
            <h3><%= stats.drivers.total %></h3>
            <p>Total Drivers</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">âœ…</div>
          <div class="stat-details">
            <h3><%= stats.drivers.approved %></h3>
            <p>Approved Drivers</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">â³</div>
          <div class="stat-details">
            <h3><%= stats.drivers.pending %></h3>
            <p>Pending Drivers</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ“„</div>
          <div class="stat-details">
            <h3><%= stats.documents.pending %></h3>
            <p>Pending Documents</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸŸ¢</div>
          <div class="stat-details">
            <h3><%= stats.drivers.active %></h3>
            <p>Active Drivers</p>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <section class="recent-activity">
        <h2>Recent Activity</h2>
        <div class="activity-list">
          <% if (recentDrivers && recentDrivers.length > 0) { %>
            <% recentDrivers.forEach(driver => { %>
              <div class="activity-item">
                <div class="activity-icon">ğŸš—</div>
                <div class="activity-content">
                  <p><strong><%= driver.userId.name %></strong> registered as a driver</p>
                  <span class="activity-time"><%= new Date(driver.createdAt).toLocaleDateString() %></span>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p>No recent activity</p>
          <% } %>
        </div>
      </section>
    </main>
  </div>
</body>
</html>