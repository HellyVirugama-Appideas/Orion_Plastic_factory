<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">

<head>
    <%- include('_layouts/head') %>
    <title>Create New Customer | <%= title %></title>

    <!-- Dropify for beautiful file upload -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns"
      data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <!-- Breadcrumbs -->
            <div id="breadcrumbs-wrapper" style="background-color: white;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 l6">
                            <h5 class="breadcrumbs-title"><span>Create New Customer</span></h5>
                        </div>
                        <div class="col s12 m6 l6 right-align-md">
                            <a href="/admin/customers" class="btn gradient-45deg-purple-deep-orange pull-right btn-breadcrumbs">
                                Back to Customers
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('messages', { messages: messages }) %>

            <div class="col s12">
                <div class="container">
                    <div class="section users-view">
                        <div class="card-panel">
                            <div class="card-content">
                                <form id="createCustomerForm" method="POST" action="/admin/customers" enctype="multipart/form-data">
                                    <div class="row">

                                        <!-- Personal / Basic Information -->
                                        <div class="col s12">
                                            <h5>Personal Information</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="name" name="name" type="text" required>
                                            <label for="name">Full Name <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="email" name="email" type="email" required>
                                            <label for="email">Email Address <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="phone" name="phone" type="tel" maxlength="10" required>
                                            <label for="phone">Phone Number (10 digits) <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="alternatePhone" name="alternatePhone" type="tel" maxlength="10">
                                            <label for="alternatePhone">Alternate Phone (Optional)</label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="companyName" name="companyName" type="text">
                                            <label for="companyName">Company Name (Optional)</label>
                                        </div>

                                        <!-- Business / Tax Information -->
                                        <div class="col s12">
                                            <h5>Business / Tax Information</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="gstNumber" name="gstNumber" type="text" placeholder="e.g. 27ABCDE1234F1Z5">
                                            <label for="gstNumber">GST Number (Optional)</label>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="panNumber" name="panNumber" type="text" placeholder="e.g. ABCDE1234F">
                                            <label for="panNumber">PAN Number (Optional)</label>
                                        </div>

                                        <!-- Primary Address (Billing Location) -->
                                        <div class="col s12">
                                            <h5>Primary Address / Billing Location</h5>
                                        </div>

                                        <div class="input-field col s12 m6">
                                            <input id="locationName" name="locationName" type="text">
                                            <label for="locationName">Location Name (e.g. Head Office)</label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="addressLine1" name="addressLine1" type="text" required>
                                            <label for="addressLine1">Address Line 1 <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="addressLine2" name="addressLine2" type="text">
                                            <label for="addressLine2">Address Line 2 (Optional)</label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="city" name="city" type="text" required>
                                            <label for="city">City <span class="red-text">*</span></label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="zipcode" name="zipcode" type="text" maxlength="6" required pattern="\d{6}">
                                            <label for="zipcode">Zipcode (6 digits) <span class="red-text">*</span></label>
                                        </div>

                                        <!-- Region Selection (with Auto-assign) -->
                                        <div class="input-field col s12 m12">
                                            <select id="region" name="region">
                                                <option value="" selected>Auto-assign based on Zipcode</option>
                                                <% if (regions && regions.length > 0) { %>
                                                    <% regions.forEach(region => { %>
                                                        <option value="<%= region._id %>">
                                                            <%= region.regionName %> 
                                                            (<%= region.regionCode %> - <%= region.state %>)
                                                        </option>
                                                    <% }) %>
                                                <% } else { %>
                                                    <option value="" disabled>No active regions found</option>
                                                <% } %>
                                            </select>
                                            <label>Delivery Region</label>
                                        </div>

                                        <!-- Auto-assign information -->
                                        <div class="col s12">
                                            <p class="grey-text text-darken-1">
                                                <i class="material-icons tiny">info_outline</i>
                                                <small>
                                                    <strong>Note:</strong> If you leave the Region field empty, 
                                                    the system will automatically assign the correct region based on the entered Zipcode. 
                                                    You can also manually select a region if needed.
                                                </small>
                                            </p>
                                        </div>

                                        <!-- Contact Person -->
                                        <div class="col s12">
                                            <h5>Contact Person (Optional)</h5>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="contactPersonName" name="contactPersonName" type="text">
                                            <label for="contactPersonName">Name</label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="contactPersonPhone" name="contactPersonPhone" type="tel" maxlength="10">
                                            <label for="contactPersonPhone">Phone</label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="contactPersonEmail" name="contactPersonEmail" type="email">
                                            <label for="contactPersonEmail">Email</label>
                                        </div>

                                        <!-- Payment & Status -->
                                        <div class="col s12">
                                            <h5>Payment & Status</h5>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <select id="paymentTerms" name="paymentTerms">
                                                <option value="cod" selected>COD</option>
                                                <option value="prepaid">Prepaid</option>
                                                <option value="credit_7">Credit 7 days</option>
                                                <option value="credit_15">Credit 15 days</option>
                                                <option value="credit_30">Credit 30 days</option>
                                            </select>
                                            <label>Payment Terms</label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <input id="creditLimit" name="creditLimit" type="number" min="0" step="100" value="0">
                                            <label for="creditLimit">Credit Limit (â‚¹)</label>
                                        </div>

                                        <div class="input-field col s12 m4">
                                            <select id="status" name="status">
                                                <option value="active" selected>Active</option>
                                                <option value="inactive">Inactive</option>
                                            </select>
                                            <label>Status</label>
                                        </div>

                                        <!-- Special Instructions -->
                                        <div class="input-field col s12">
                                            <textarea id="specialInstructions" name="specialInstructions" class="materialize-textarea"></textarea>
                                            <label for="specialInstructions">Special Instructions / Delivery Notes</label>
                                        </div>

                                        <!-- Documents Upload -->
                                        <div class="col s12">
                                            <h5>Documents (Optional)</h5>
                                        </div>

                                        <div class="col s12 m6 l3">
                                            <label>GST Certificate</label>
                                            <input type="file" name="gstCertificate" class="dropify" accept="image/*,application/pdf">
                                        </div>

                                        <div class="col s12 m6 l3">
                                            <label>PAN Card</label>
                                            <input type="file" name="panCard" class="dropify" accept="image/*,application/pdf">
                                        </div>

                                        <div class="col s12 m6 l3">
                                            <label>Shop License</label>
                                            <input type="file" name="shopLicense" class="dropify" accept="image/*,application/pdf">
                                        </div>

                                        <div class="col s12 m6 l3">
                                            <label>Other Document</label>
                                            <input type="file" name="otherDoc" class="dropify" accept="image/*,application/pdf">
                                        </div>

                                        <!-- Submit Buttons -->
                                        <div class="col s12 right-align mt-5">
                                            <button type="submit" class="btn gradient-45deg-purple-deep-orange waves-effect waves-light">
                                                <i class="material-icons left">person_add</i> Create Customer
                                            </button>
                                            <a href="/admin/customers" class="btn grey waves-effect waves-light ml-2">
                                                Cancel
                                            </a>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('_layouts/commonJs') %>

        <!-- Dropify JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
        <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>

        <script>
            $(document).ready(function() {
                // Initialize Dropify
                $('.dropify').dropify({
                    messages: {
                        'default': 'Drag & drop or click to upload',
                        'remove': 'Remove',
                        'error': 'Ooops, something went wrong.'
                    }
                });

                // Materialize initialization
                $('select').formSelect();
                M.updateTextFields();
                M.textareaAutoResize($('#specialInstructions'));

                // Optional: Show toast when zipcode is complete (UX improvement)
                $('#zipcode').on('input', function() {
                    const val = $(this).val().trim();
                    if (val.length === 6 && /^\d{6}$/.test(val)) {
                        M.toast({
                            html: 'Region will be auto-assigned based on this zipcode',
                            classes: 'rounded blue darken-1',
                            displayLength: 3500
                        });
                    }
                });
            });
        </script>
</body>
</html>